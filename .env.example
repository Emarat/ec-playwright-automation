# ===========================================
# EC AUTOMATION CONFIGURATION EXAMPLE
# ===========================================
# Copy this file to .env and update the values according to your setup

# ===========================================
# SERVER ENVIRONMENT CONFIGURATION
# ===========================================
ENVIRONMENT=training

# Update these URLs and credentials for your servers
DEV_BASE_URL=http://your-dev-server:port/
DEV_USERNAME=your_dev_username
DEV_PASSWORD=your_dev_password

TRAINING_BASE_URL=http://your-training-server:port/
TRAINING_USERNAME=your_training_username
TRAINING_PASSWORD=your_training_password

PRD_BASE_URL=http://your-prod-server:port/
PRD_USERNAME=your_prod_username
PRD_PASSWORD=your_prod_password

# ===========================================
# ELECTION TYPE CONFIGURATION
# ===========================================
ELECTION_TYPE=জাতীয় সংসদ নির্বাচন

# ===========================================
# FILE PATHS
# ===========================================
# Update this path to point to your test PDF file
TEST_FILE_PATH=/path/to/your/test/file.pdf

# ===========================================
# OTHER SETTINGS
# ===========================================
HEADLESS_MODE=false
DEBUG_MODE=false
